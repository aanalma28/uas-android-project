<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerificationActivity"
    android:background="@color/white"
    android:paddingHorizontal="32dp"
    android:paddingTop="26dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/back"
       android:id="@+id/imgVerify"
       android:layout_marginBottom="30dp"
       android:src="@drawable/cuate"/>

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgVerify"
        android:paddingHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_head"
            android:text="Masukkan Kode"
            android:fontFamily="@font/poppinssemibold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Buka Email yang kami kirimkan ke contoh@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_shape"
            android:layout_gravity="center"
            android:hint="****"
            android:textSize="20sp"
            android:paddingVertical="5dp"
            android:inputType="number"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/edt_conf_pass"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinssemibold"
            android:text="Verifikasi Sekarang"
            android:clickable="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/countdown_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="kirim kode"
            android:textAllCaps="false"
            android:textColor="@color/bluePrimary"
            android:clickable="true"
            android:textSize="14sp"
            android:background="@drawable/btn_transparent"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</RelativeLayout>