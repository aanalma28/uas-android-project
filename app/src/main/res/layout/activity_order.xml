<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="32dp"
        />

    <TextView
        android:layout_toRightOf="@id/back"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembayaran"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold"
        />

    <TextView
        android:id="@+id/course"
        android:layout_below="@id/back"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold"/>

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_below="@id/course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:id="@+id/title_course"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Title Course"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"/>
        <TextView
            android:id="@+id/agency_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agency Course"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ringkasan"
        android:layout_below="@id/ly_1"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringkasan pembayaran"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold"/>

    <LinearLayout
        android:id="@+id/ly_2"
        android:layout_below="@id/ringkasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:id="@+id/txt_total_harga"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Total harga"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"/>
        <TextView
            android:id="@+id/price_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp100.000"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_3"
        android:layout_below="@id/ly_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:id="@+id/txt_biaya_layanan"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Biaya layanan"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"/>
        <TextView
            android:id="@+id/value_biaya_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_4"
        android:layout_below="@id/ly_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:id="@+id/txt_total_tagihan"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Total tagihan"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"/>
        <TextView
            android:id="@+id/value_total_tagihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp100.000"
            android:textSize="12sp"
            android:textAlignment="textEnd"
            android:textColor="@color/bluePrimary"
            android:fontFamily="@font/poppinsmedium"/>
    </LinearLayout>

    <TextView
        android:id="@+id/metode_pembayaran"
        android:layout_below="@id/ly_4"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode pembayaran"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold"/>

    <Spinner
        android:id="@+id/spinner_method"
        android:layout_below="@id/metode_pembayaran"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_bayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="Bayar"
        android:background="@drawable/button_shape"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"/>
</RelativeLayout>