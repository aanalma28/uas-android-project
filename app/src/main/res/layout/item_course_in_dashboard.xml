<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_result_course_in_dashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="24dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_course"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_img"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:text="Persiapan UTBK 2024"/>

            <TextView
                android:id="@+id/name_bimbel"
                android:layout_below="@id/title_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/grey"
                android:text="8 Bab" />

            <TextView
                android:id="@+id/desc_course"
                android:layout_below="@id/name_bimbel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:text="Lorem ipsum dolor sit ..."
                android:maxLines="1"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>