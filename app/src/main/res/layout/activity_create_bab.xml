<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateBabActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="32dp"
        />

    <TextView
        android:id="@+id/buat_bab"
        android:layout_below="@id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buat Bab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/label_nama"
        android:layout_below="@+id/buat_bab"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_nama"
        android:hint="Masukkan nama bab"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"
        android:background="@drawable/input_shape"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"/>

    <TextView
        android:id="@+id/label_tentang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_nama"
        android:text="Tentang"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"/>

    <EditText
        android:id="@+id/edt_tentang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_tentang"
        android:hint="Masukkan tentang pelajaran"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14sp"
        android:background="@drawable/input_shape"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_tentang"
        android:layout_marginHorizontal="32dp"
        android:text="Simpan"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"/>

</RelativeLayout>