<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:background="@color/white">

        <TextView
            android:id="@+id/txt_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="32dp"/>

        <ImageView
            android:id="@+id/img_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_akun"
            android:src="@drawable/person_circle"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/nama_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_akun"
            android:text="Your Name"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/email_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_akun"
            android:text="yourname@gmail.com"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/dashboard"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_akun"
            android:text="Dashboard"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:drawablePadding="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_profile_shape"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:drawableLeft="@drawable/dashboard"
            android:layout_marginTop="32dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"/>

        <TextView
            android:id="@+id/order"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashboard"
            android:text="Order History"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:drawablePadding="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_profile_shape"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:drawableLeft="@drawable/cart"
            android:layout_marginTop="8dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"/>

        <TextView
            android:id="@+id/ganti_pass"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order"
            android:text="Ganti password"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:drawablePadding="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_profile_shape"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:layout_marginTop="8dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ganti_pass"
            android:text="Logout"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:drawablePadding="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_profile_shape"
            android:textColor="#EE1E1E"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:drawableLeft="@drawable/round_logout_24"
            android:layout_marginTop="8dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"/>

</RelativeLayout>