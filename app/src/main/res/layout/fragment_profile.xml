<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="32dp"/>

        <ImageView
            android:id="@+id/img_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_akun"
            android:src="@drawable/person_circle"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/nama_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_akun"
            android:text="Your Name"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/email_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_akun"
            android:text="yourname@gmail.com"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/email_akun"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_profile_shape"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/round_logout_24"
                android:layout_marginRight="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="#EE1E1E"
                android:fontFamily="@font/poppinsregular"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>