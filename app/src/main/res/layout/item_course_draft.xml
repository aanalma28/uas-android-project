<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="24dp">

    <LinearLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp">

        <TextView
            android:id="@+id/btn_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish"
            android:drawableRight="@drawable/ic_upload"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="12sp"
            android:textColor="@color/bluePrimary"
            android:background="@drawable/btn_border_grey_shape"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/edit_course"
            android:src="@drawable/ic_pen"
            android:background="@drawable/btn_border_grey_shape"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_trash"
            android:id="@+id/delete_course"
            android:background="@drawable/btn_border_grey_shape"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/action"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_result_course_in_draft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/img_course"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_img"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/black"
                    android:text="Persiapan UTBK 2024"/>

                <TextView
                    android:id="@+id/jumlah_bab"
                    android:layout_below="@id/title_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/grey"
                    android:text="8 Bab" />

                <TextView
                    android:id="@+id/desc_course"
                    android:layout_below="@id/jumlah_bab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/black"
                    android:text="Lorem ipsum dolor sit ..."
                    android:maxLines="1"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>