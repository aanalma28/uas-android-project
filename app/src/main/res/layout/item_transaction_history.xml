<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="24dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="10dp"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/img_course"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_img"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:text="Persiapan UTBK 2024"/>

            <TextView
                android:id="@+id/name_bimbel"
                android:layout_below="@id/title_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/grey"
                android:text="Ganesha Operation"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@+id/name_bimbel">

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/black"
                    android:text="Status:"
                    />

                <TextView
                    android:id="@+id/status"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/yellow"
                    android:text="Pending"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>